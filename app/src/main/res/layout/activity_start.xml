  <!--android:text="@string/create_slamzoom"-->
  <!--android:layout_width="match_parent"-->
  <!--android:layout_height="120dp"-->
  <!--android:gravity="center"-->
  <!--android:textSize="24dp"/>-->
</android.support.percent.PercentRelativeLayout>