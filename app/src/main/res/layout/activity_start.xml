<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/not_quite_black">
  <TextureView
      android:id="@+id/backgroundVideoView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>
  <ImageView
      android:id="@+id/logo"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/logo_padding"
      android:adjustViewBounds="true"
      android:scaleType="fitCenter"
      android:src="@drawable/sz_logo_transparent_big"/>

  <TextView
      android:id="@+id/tapAnywhereToBeginText"
      android:text="@string/tap_anywhere_to_begin"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:textSize="18dp"
      android:gravity="bottom|center_horizontal"
      android:paddingBottom="60dp"
      android:layout_gravity="center_horizontal"
      android:background="@android:color/transparent"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@android:color/transparent"
      android:layout_gravity="bottom"
      android:gravity="center">
    <Button
        android:id="@+id/privacyPolicyLink"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:padding="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/legal_text_size"
        android:textColor="@color/legal_link_text"
        android:text="@string/privacy_policy_link"/>

    <Button
      android:id="@+id/termsOfUseLink"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:padding="0dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="@dimen/legal_text_size"
      android:textColor="@color/legal_link_text"
      android:text="@string/terms_of_use_link"/>

    <Button
        android:id="@+id/licensesLink"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:padding="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/legal_text_size"
        android:textColor="@color/legal_link_text"
        android:text="@string/licenses_link"/>
  </LinearLayout>
</FrameLayout>